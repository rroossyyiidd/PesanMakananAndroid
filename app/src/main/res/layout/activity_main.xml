<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="3"
    android:background="#FFFAF0"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/table" />

    <LinearLayout
        android:id="@+id/layoutlihatbtn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:background="@drawable/stylebutton1"
            android:src="@drawable/lihat_pesanan" />

        <Button
            android:id="@+id/lihatpesanan"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:background="@drawable/stylebutton1"
            android:text="Lihat pesanan"
            android:textColor="#fff"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutinputbtn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:background="@drawable/stylebutton1"
            android:src="@drawable/tambah_pesanan" />

        <Button
            android:id="@+id/inputbtn"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:background="@drawable/stylebutton1"
            android:text="Tambah pesanan"
            android:textColor="#fff"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutinfobtn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:background="@drawable/stylebutton1"
            android:src="@drawable/tentang_aplikasi" />

        <Button
            android:id="@+id/infobtn"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:background="@drawable/stylebutton1"
            android:text="Tentang aplikasi"
            android:textColor="#fff"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>